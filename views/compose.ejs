<%-include("partials/header")-%>
<h3>Compose</h3>
<form action="/compose" method="post">
    <div class="form-group">
      <label class="mt-2">Title</label>
      <input type="text" class="form-control mt-2" name="postTitle" placeholder="Enter Heading">
    </div>
    <div class="form-group">
      <label class="mt-2">Post</label>
      <textarea class="form-control mt-2" name="postBody" cols="30" rows="5" placeholder="Write Here"></textarea>
    </div>
    <button type="submit" class="btn btn-primary mt-4">Publish</button>
</form>

<%-include("partials/footer")-%>