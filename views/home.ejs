<%-include("partials/header")-%>
    <h3><i class="bi bi-asterisk"></i> Home</h3>
    <p> <%=homeContent%> 
    </p>
    
            <% posts.forEach(function(post){ %>
            <div class="card my-4">
                <div class="card-body">
                    <h3><i class="bi bi-caret-right"></i> <a href="/posts/<%= post.title %>"><%= post.title %></h3></a> 
                    <p><%= post.content.substring(0, 308) + "..." %>
                    </p>
                    <a class="btn btn-outline-primary" href="/posts/<%= post.title %>">
                        <i class="bi bi-book"></i>
                        Read More
                    </a>
                    <a class="btn btn-outline-danger" href="/posts/<%= post.title %>">
                        <i class="bi bi-trash3"></i>
                        Remove
                    </a>
                    
                </div>
            </div> 
            <% }); %>
        
<%-include("partials/footer")-%>